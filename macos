!/usr/bin/env bash

# Move dock to LHS
defaults write com.apple.dock orientation -string left

# Autohide dock
defaults write com.apple.dock autohide -bool true

# Use a medium icon size for dock icons
defaults write com.apple.dock tilesize -int 48

# Use a rapid key repeat rate
defaults write -g KeyRepeat -int 2
defaults write -g InitialKeyRepeat -int 25

# Use a fast mouse movement rate
defaults write -g com.apple.mouse.scaling -float 6.0

# TODO
# - [ ] disable magnification of dock icons
# - [ ] map bottom left hot corner to mission control
# - [ ] disable spotlight
